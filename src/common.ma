	.MACRO	.FETCH	DEVPTR,DEVADR,ERR
	CLA
	TAD	DEVADR
	DCA	.+12
	TAD	DEVPTR
	DCA	.+6
	TAD	DEVPTR+1
	DCA	.+5
	CALUSR	1
	0
	0
	0

	.IF NB	ERR	<JMP	ERR>
